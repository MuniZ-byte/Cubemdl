# Cube.js Configuration
CUBEJS_DEV_MODE=true
CUBEJS_API_SECRET=your-secret-key-here
CUBEJS_CACHE_AND_QUEUE_DRIVER=memory
CUBEJS_WEB_SOCKETS=true

# Database Configuration (Generic)
CUBEJS_DB_TYPE=postgres  # postgres, mysql, sqlite, mssql, oracle
CUBEJS_DB_HOST=localhost
CUBEJS_DB_PORT=5432
CUBEJS_DB_NAME=your_database_name
CUBEJS_DB_USER=your_username
CUBEJS_DB_PASS=your_password
CUBEJS_DB_SCHEMA=ecommerce  # Schema name (ecommerce, public, main, dbo, etc.)

# LLM Configuration for Code Generation
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here  # Optional
LLM_PROVIDER=openai  # openai, anthropic, local
LLM_MODEL=gpt-3.5-turbo # gpt-4, gpt-3.5-turbo, claude-3-sonnet-20240229, etc.

# Optional: Domain Override (auto-detection by default)
# DOMAIN_OVERRIDE=ecommerce  # ecommerce, saas, finance, healthcare, education, crm, generic
